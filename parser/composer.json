{
    "name": "wildberries/parser",
    "description": "Parser for Wildberries data",
    "type": "project",
    "require": {
        "php": "^8.3",
        "ext-curl": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.8",
        "longlang/phpkafka": "^1.2",
        "monolog/monolog": "^3.5",
        "smi2/phpclickhouse": "^1.6",
        "symfony/console": "^7.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "friendsofphp/php-cs-fixer": "^3.51",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "WB\\Parser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WB\\Parser\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-fix": "php-cs-fixer fix",
        "stan": "phpstan analyse src"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
